<Window x:Class="VirtualWallet.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualWallet"
        mc:Ignorable="d"
        Title="Developer Console" SizeToContent="Height" Width="600" Closing="HideOnClose" Icon="/pig32.png">
    <StackPanel>
        <TextBox Name="Console" Height="400" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible">
        </TextBox>
        <StackPanel Orientation="Horizontal">
            <Button Margin="5" Click="ClearConsole">Clear Console</Button>
        </StackPanel>
    </StackPanel>
</Window>
