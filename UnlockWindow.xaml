<Window x:Class="VirtualWallet.UnlockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualWallet"
        mc:Ignorable="d"
        Title="Unlock Wallet" SizeToContent="WidthAndHeight" Icon="/pig32.png">
    <StackPanel>
        <Label Name="Info" HorizontalAlignment="Center">Info</Label>
        <Image Name="Image" Margin="5" Width="64" Height="64"></Image>
        <StackPanel Orientation="Horizontal">
            <Label Width="105">Password:</Label>
            <PasswordBox Name="Password" Width="200" Margin="0,0,5,0"></PasswordBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Width="105">Repeat Password:</Label>
            <PasswordBox Name="PasswordRepeat" Width="200"></PasswordBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Margin="5" Click="Unlock" IsDefault="True">Unlock</Button>
            <Button Margin="5" Click="Cancel">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
