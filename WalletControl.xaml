<UserControl x:Class="VirtualWallet.WalletControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualWallet"
             mc:Ignorable="d" 
             Height="96" Width="88">
    <Border Name="WalletBorder" BorderBrush="Transparent" BorderThickness="2">
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Name="Image" Width="56" Height="56" Margin="16,5,0,0"/>
                <Image Name="Lock" HorizontalAlignment="Right" Width="16" Height="16" Margin="0,-40,0,0"/>
            </StackPanel>
            <Label Name="Name" Content="Wallet 1" HorizontalAlignment="Center" Margin="0,-5,0,0"/>
            <Label Name="Balance" Content="0.0 PIG" HorizontalAlignment="Center" Margin="0,-10,0,0"/>
        </StackPanel>
    </Border>
</UserControl>
